# ─── Required ────────────────────────────────────────────────────────────────
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Channel where uploaded files are stored (REQUIRED)
FLOG_CHAT_ID=-100xxxxxxxxxx

# ─── Owner ────────────────────────────────────────────────────────────────────
# Comma-separated user IDs
OWNER_ID=1008848605

# ─── Database ─────────────────────────────────────────────────────────────────
DB_URI=mongodb://localhost:27017/
DATABASE_NAME=filestream_bot

# ─── Channels ─────────────────────────────────────────────────────────────────
# Log channel for new users & uploaded files (optional, 0 to disable)
LOGS_CHAT_ID=0

# ─── Web Server ───────────────────────────────────────────────────────────────
BIND_ADDRESS=0.0.0.0
PORT=8080
# Public base URL used for generating stream/download links
URL=https://your-domain.com

# ─── Security ─────────────────────────────────────────────────────────────────
SECRET_KEY=change-this-to-a-long-random-secret

# ─── Optional ─────────────────────────────────────────────────────────────────
# URL of image shown on /start (leave blank to disable)
Start_IMG=

# URL of image shown on /files command (leave blank to disable)
Files_IMG=

# Force-subscription channel (initial values — managed via /bot_settings)
FSUB_ID=0
FSUB_INV_LINK=

# Whether the bot is public by default (managed via /bot_settings)
PUBLIC_BOT=False

# Bandwidth limit in bytes — default 100 GB (managed via /bot_settings)
MAX_BANDWIDTH=107374182400

# Maximum file size accepted from Telegram — default 4 GB
MAX_TELEGRAM_SIZE=4294967296
